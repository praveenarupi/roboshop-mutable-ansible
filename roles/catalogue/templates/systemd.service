[Unit]
Description = Catalogue Service
[Service]
User=roboshop
Environment=MONGO={{ lookup('aws_ssm', 'mutable.catalogue.{{ENV}}.MONGO', region='us-east-1' ) }}
Environment=MONGO_URL={{ lookup('aws_ssm', 'mutable.catalogue.{{ENV}}.MONGO_URL', region='us-east-1' ) }}
ExecStart=/bin/node /home/roboshop/catalogue/server.js
SyslogIdentifier=catalogue

[Install]
WantedBy=multi-user.target